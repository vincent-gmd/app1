<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="numberPiker" parent="Base">
        <item name="android:background">"@drawable/number_piker_style"</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="edit_text" parent="Base">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorFundoEditText</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="btn_sucesso" parent="Base">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="btn_dark" parent="Base">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="container">
        <!-- Customize your theme here. -->
        <item name="android:padding">16dp</item>
        <item name="android:background">#fff</item>
    </style>



</resources>
